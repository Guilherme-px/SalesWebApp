@model salesWebApp.Models.ViewModels.SellerFormViewModel;

@{
    ViewData["Title"] = "Editar vendedores";
}

<h1>@ViewData["Title"]</h1>

<div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Seller.Id">
                <div class="form-group">
                    <label asp-for="Seller.Name" class="control-label">Nome:</label>
                    <input asp-for="Seller.Name" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Seller.Email" class="control-label">E-mail:</label>
                    <input asp-for="Seller.Email" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Seller.BirthDate" class="control-label">Data de nascimento:</label>
                    <input asp-for="Seller.BirthDate" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Seller.BaseSalary" class="control-label">Salario:</label>
                    <input asp-for="Seller.BaseSalary" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Seller.DepartmentId" class="control-label">Departamento:</label>
                    <select asp-for="Seller.DepartmentId" class="form-control"
                        asp-items="@(new SelectList(Model.Departments, "Id", "Name"))"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>